# ==========================================
# EDUHIRE - Environment Configuration
# Copy this file to .env and fill in your values
# ==========================================

# ==========================================
# NODE ENVIRONMENT
# ==========================================
NODE_ENV=development
PORT=5000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MONGODB_URI=mongodb://localhost:27017/eduhire
# or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eduhire?retryWrites=true&w=majority

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# ==========================================
# CLOUDINARY - FILE/IMAGE STORAGE
# ==========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
# Email service is optional - app will work without it
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_or_password
SMTP_FROM=noreply@eduhire.com

# Alternative: Use SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@eduhire.com

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
# Set this in client/.env
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENV=development

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGIN=http://localhost:3000
# For production, set to your domain:
# CORS_ORIGIN=https://yourdomain.com

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# LOGGING (Optional)
# ==========================================
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# ==========================================
# SESSION/COOKIE
# ==========================================
SESSION_SECRET=your_session_secret_change_this_in_production

# ==========================================
# OPTIONAL FEATURES
# ==========================================
# Feature flags for new features
FEATURE_ADVANCED_SEARCH=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
